<%= form_for :paste, url: pastes_path do |f| %>

  <%= f.text_area :paste_content, spellcheck: false, :autofocus=>true %>



  <%= button_tag(type: "submit", id: "save-paste-button") do %>
    <i class="fa fa-floppy-o" aria-hidden="true"></i>
  <% end %>

<% end %>
<%= link_to "New paste", root_path, id: "new-paste-button"  %>
